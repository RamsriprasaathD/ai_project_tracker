generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  INDIVIDUAL
  MANAGER
  TEAM_LEAD
  TEAM_MEMBER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  BLOCKED
}

model Organization {
  id        String    @id @default(cuid())
  name      String    @unique
  managerId String
  manager   User      @relation("ManagerOrganization", fields: [managerId], references: [id])
  users     User[]
  projects  Project[]
  teamLeads User[]    @relation("OrgTeamLeads")
  createdAt DateTime  @default(now())
}

/**
 * --------------------------------------------------------------------------
 */
/**
 * User Model
 */
/**
 * --------------------------------------------------------------------------
 */
model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String
  name         String?
  role         Role

  // Organization relations
  organizationId String?
  organization   Organization?  @relation(fields: [organizationId], references: [id])
  managedOrgs    Organization[] @relation("ManagerOrganization")

  // Unique TL ID within org
  tlIdWithinOrg    Int?
  orgTeamLeadOrgId String?
  orgTeamLead      Organization? @relation("OrgTeamLeads", fields: [orgTeamLeadOrgId], references: [id])

  // Team hierarchy
  teamLeadId  String?
  teamLead    User?   @relation("TLToMembers", fields: [teamLeadId], references: [id])
  teamMembers User[]  @relation("TLToMembers")

  // Project hierarchy
  projectsOwned    Project[] @relation("OwnerProjects")
  assignedProjects Project[] @relation("AssignedProjects")

  // Task relations
  tasksAssigned Task[] @relation("AssigneeTasks")
  createdTasks  Task[] @relation("CreatedTasks")

  // Password reset & Insights
  passwordResets    PasswordReset[]
  insightsGenerated Insight[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([organizationId, tlIdWithinOrg])
}

/**
 * --------------------------------------------------------------------------
 */
/**
 * Project Model
 */
/**
 * --------------------------------------------------------------------------
 */
model Project {
  id             String        @id @default(cuid())
  title          String
  description    String?
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  ownerId String?
  owner   User?   @relation("OwnerProjects", fields: [ownerId], references: [id])

  assignedToId String?
  assignedTo   User?   @relation("AssignedProjects", fields: [assignedToId], references: [id])

  tasks    Task[]
  insights Insight[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * --------------------------------------------------------------------------
 */
/**
 * Task Model
 */
/**
 * --------------------------------------------------------------------------
 */
model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  projectId   String?
  project     Project?   @relation(fields: [projectId], references: [id])

  assigneeId String?
  assignee   User?   @relation("AssigneeTasks", fields: [assigneeId], references: [id])

  creatorId String?
  creator   User?   @relation("CreatedTasks", fields: [creatorId], references: [id])

  dueDate     DateTime?
  aiSummary   String?
  aiRiskScore Float?

  // Subtasks (Self-Relation)
  parentTaskId String?
  parentTask   Task?   @relation("SubTasks", fields: [parentTaskId], references: [id])
  subtasks     Task[]  @relation("SubTasks")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * --------------------------------------------------------------------------
 */
/**
 * Password Reset Model
 */
/**
 * --------------------------------------------------------------------------
 */
model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

/**
 * --------------------------------------------------------------------------
 */
/**
 * AI Insight Model
 */
/**
 * --------------------------------------------------------------------------
 */
model Insight {
  id            String   @id @default(cuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id])
  summary       String
  generatedById String
  generatedBy   User     @relation(fields: [generatedById], references: [id])
  createdAt     DateTime @default(now())
}
