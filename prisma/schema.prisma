generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  INDIVIDUAL
  MANAGER
  TEAM_LEAD
  TEAM_MEMBER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  BLOCKED
}

model Organization {
  id          String   @id @default(cuid())
  name        String   @unique
  managerId   String
  manager     User     @relation("ManagerOrganization", fields: [managerId], references: [id])
  users       User[]
  projects    Project[]
  teamLeads   User[]   @relation("OrgTeamLeads")
  createdAt   DateTime @default(now())
}

model User {
  id             String     @id @default(cuid())
  email          String     @unique
  passwordHash   String
  name           String?
  role           Role

  // Relation to organization

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], map: "User_organizationId_fkey")

  // Organization manager relation
  managedOrgs    Organization[] @relation("ManagerOrganization")

  // Unique TL ID inside organization (Team Lead only)
  tlIdWithinOrg  Int?
  orgTeamLeadOrgId String?
  orgTeamLead    Organization? @relation("OrgTeamLeads", fields: [orgTeamLeadOrgId], references: [id], map: "User_orgTeamLeadOrgId_fkey")
  @@unique([organizationId, tlIdWithinOrg])

  // Team relationships
  teamLeadId     String?    // Member points to TLâ€™s user.id
  teamLead       User?      @relation("TLToMembers", fields: [teamLeadId], references: [id])
  teamMembers    User[]     @relation("TLToMembers")

  // Projects/tasks ownership
  projectsOwned  Project[]  @relation("OwnerProjects")
  tasksAssigned  Task[]     @relation("AssigneeTasks")
  createdTasks   Task[]     @relation("CreatedTasks")

  // Password reset relation
  passwordResets PasswordReset[]

  // Insights generated
  insightsGenerated Insight[]

  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Project {
  id              String        @id @default(cuid())
  title           String
  description     String?
  organizationId  String?
  organization    Organization? @relation(fields: [organizationId], references: [id])

  // Owner could be TL or Manager
  ownerId         String?
  owner           User?         @relation("OwnerProjects", fields: [ownerId], references: [id])

  tasks           Task[]
  insights        Insight[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Task {
  id          String      @id @default(cuid())
  title       String
  description String?
  status      TaskStatus  @default(TODO)

  projectId   String?
  project     Project?    @relation(fields: [projectId], references: [id])

  assigneeId  String?
  assignee    User?       @relation("AssigneeTasks", fields: [assigneeId], references: [id])

  creatorId   String?     // TL or Manager who created task
  creator     User?       @relation("CreatedTasks", fields: [creatorId], references: [id])

  dueDate     DateTime?
  aiSummary   String?
  aiRiskScore Float?

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model PasswordReset {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  token      String   @unique
  expiresAt  DateTime
  used       Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Insight {
  id             String     @id @default(cuid())
  projectId      String
  project        Project    @relation(fields: [projectId], references: [id])
  summary        String
  generatedById  String
  generatedBy    User       @relation(fields: [generatedById], references: [id])
  createdAt      DateTime   @default(now())
}
